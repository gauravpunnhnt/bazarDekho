<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="151dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Sign Up"
            android:fontFamily="@font/layarbahtera_dd_w01_light"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="90dp"
            android:layout_gravity="center">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/camera"
            android:foregroundGravity="center"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:hintTextColor="@color/colorAccent"
            app:boxStrokeColor="@color/colorAccent"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:drawableStart="@drawable/ic_user"
                android:fontFamily="@font/layarbahtera_dd_w01_bold"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/colorAccent"
            app:boxStrokeColor="@color/colorAccent"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/colorAccent"
                android:textSize="14dp"
                android:fontFamily="@font/layarbahtera_dd_w01_bold"
                android:textColor="@color/colorAccent"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/colorAccent"
            app:boxStrokeColor="@color/colorAccent"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:fontFamily="@font/layarbahtera_dd_w01_bold"
                android:drawableStart="@drawable/ic_password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:hintTextColor="@color/colorAccent"
            app:boxStrokeColor="@color/colorAccent"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dob_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of birth"
                android:textColorHint="@color/colorAccent"
                android:textSize="14dp"
                android:fontFamily="@font/layarbahtera_dd_w01_bold"
                android:textColor="@color/colorAccent"
                android:drawableStart="@drawable/ic_date_of_birth"
                android:inputType="date"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <Button
            android:id="@+id/sign_up_Btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="25dp"
            app:icon="@drawable/ic_signup"
            app:iconGravity="textStart"
            android:gravity="center"
            app:shapeAppearance="@style/Rounded"
            android:background="@color/colorPrimaryDark"
            style="@style/Widget.MaterialComponents.Button.Icon"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/log_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?Log in"
            android:textSize="19dp"
            android:fontFamily="@font/layarbahtera_dd_w01_light"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>


</LinearLayout>